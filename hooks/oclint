#!/usr/bin/env bash
# Wrapper script for oclint
set -eu
readonly DEBUG=${DEBUG:-unset}
if [ "${DEBUG}" != unset ]; then
  set -x
fi

. hooks/utils

pwd_files="$(ls)"
# hook args exist that need to be acted upon
oclint $(clean_args "$@")
# Remove any plist files generated by oclint
echo "$pwd_files $(ls)" | tr ' ' '\n' | sort | uniq -u | grep .plist | xargs rm

